generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
}

model Companies {
  id              String          @id @default(uuid())
  name            String
  wallet          String          @unique
  total_purchased Int?
  total_offset    Int?
  created_at      DateTime
  CarbonCredits   CarbonCredits[]
  NftProofs       NftProofs[]

  @@map("companies")
}

model CarbonCredits {
  id           String    @id @default(uuid())
  company_id   String
  company      Companies @relation(fields: [company_id], references: [id], onDelete: Cascade)
  amount       Float
  type         String
  tx_hash      String
  nft_id       Int
  project_name String
  created_at   DateTime

  @@map("carbon_credits")
}

model OffsetProjects {
  id          String      @id @default(uuid())
  name        String
  description String
  wallet      String
  created_at  DateTime
  NftProofs   NftProofs[]

  @@map("offset_projects")
}

model NftProofs {
  id             String         @id @default(uuid())
  company_id     String
  company        Companies      @relation(fields: [company_id], references: [id], onDelete: Cascade)
  offset_id      String
  offset_project OffsetProjects @relation(fields: [offset_id], references: [id], onDelete: Cascade)
  metadata_uri   String
  created_at     DateTime

  @@map("nft-proofs")
}
